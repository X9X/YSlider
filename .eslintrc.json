{
    "extends": "eslint:recommended",
    "env": {
        "browser": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "indent": 0,
        "comma-dangle": 0,
        "no-cond-assign": ["error", "always"],
        "no-console": "off"
    }
}
